{
  "name": "photock",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/app",
    "packages/backend",
    "packages/firebase-upload",
    "packages/cypress"
  ],
  "scripts": {
    "init": "pnpm i && npm run init:workspace",
    "init:workspace": "pnpm init -w packages/app -y && pnpm init -w packages/backend -y",
    "build": "pnpm turbo run build",
    "build-and-start": "pnpm turbo run app#build-and-start",
    "dev": "pnpm turbo run app#dev & pnpm turbo run backend#dev",
    "cypress": "pnpm turbo run cypress#local",
    "cypress:ci": "pnpm turbo run cypress#ci",
    "lint": "pnpm turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "link": "cd packages/backend && pnpm link ../firebase-upload",
    "clean": "rm -rf node_modules && cd packages/app && rm -rf node_modules && cd ../backend && rm -rf node_modules",
    "p:app": "pnpm run dev --filter app",
    "p:backend": "pnpm run nodemon --filter backend",
    "p:cypress": "pnpm run local --filter cypress"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=8",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@6.29.1",
  "dependencies": {
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0"
  }
}
